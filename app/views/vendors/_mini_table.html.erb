

<table>
<thead>
  <tr>
      <th>User</th>
      <th>Title</th>
      <th>Due On</th>
  </tr>
</thead>
<tbody>
  <% @gigs.each do |gig| %>
  <!-- <p>User: <%= gig.user.username %></p>
  <p>Title: <%= gig.title %></p>
  <p>Description <%= gig.description %></p> -->
    <tr>
      <td> <%= gig.user.username %> </td>
      <td> <%= link_to "#{gig.title}", message_path(gig), method: 'get' %> </td>
      <td> <%= gig.created_at%> </td>
    </tr>
  <!-- add button that allows user and vendor to go to show page of message controller and then allows to message -->
  <% end %>

</tbody>
</table>
<% if !@gigs.empty? %>
<div class="waves-effect waves-light btn", style="float:right"> <%= button_to "All Active Gigs", vendor_gigs_path(@vendor), method: 'get' %> </div>
<% else %>
<div class="waves-effect waves-light btn", style="float:right"> No Active Gigs </div>
<% end %>
<br>
<br>

<table>
<thead>
  <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price Quote</th>
  </tr>
</thead>
<tbody>
    <% @vendor.responses.each do |response| %>
    <tr>
      <td> <%= response.post.title %> </td>
    <td><%= truncate response.post.description, length:15, separator:/\w/, omission: "..."%></td>
    <td><%= response.price_quote %></td>
      </tr>
      <%end %>
</tbody>
</table>
<% if !@vendor.responses.empty? %>
<div class="waves-effect waves-light btn", style="float:right"> <%= button_to "Awaiting Response", vendor_responses_path(@vendor), method: 'get' %> </div>
<% else %>
<div class="waves-effect waves-light btn", style="float:right"> No Responses </div>
<% end %>


<br>
<br>
  <table>
  <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price Range</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= truncate post.description, length:15, separator:/\w/, omission: "..." %></td>
        <td>$ <%= post.min_price%> - $ <%= post.max_price%></td>
      </tr>

    <% end %>
  </tbody>
  </table>

  <% if !@posts.empty? %>
  <div class="waves-effect waves-light btn" style="float:right"> <%= button_to "More Gigs Available", posts_path, method: 'get' %> </div>
  <% else %>
  <div class="waves-effect waves-light btn", style="float:right"> No Gigs Available </div>
  <% end %>
