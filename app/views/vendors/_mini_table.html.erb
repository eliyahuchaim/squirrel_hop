

<table>
<thead>
  <tr>
      <th>User</th>
      <th>Title</th>
      <th>Due On</th>
  </tr>
</thead>
<tbody>
  <% @gigs.each do |gig| %>
  <!-- <p>User: <%= gig.user.username %></p>
  <p>Title: <%= gig.title %></p>
  <p>Description <%= gig.description %></p> -->
    <tr>
      <td> <%= gig.user.username %> </td>
      <td> <%= link_to "#{gig.title}", message_path(gig), method: 'get' %> </td>
      <td> <%= gig.created_at%> </td>
    </tr>
  <!-- add button that allows user and vendor to go to show page of message controller and then allows to message -->
  <% end %>

</tbody>
</table>
<% active_gigs = !@gigs.empty? ? "All Active Gigs" : "No Active Gigs" %>
<div class="waves-effect waves-light btn", style="float:right"> <%= button_to "#{active_gigs}", vendor_gigs_path(@vendor), method: 'get' %> </div>

<br>
<br>

<table>
<thead>
  <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price Quote</th>
  </tr>
</thead>
<tbody>
    <% @vendor.responses.each do |response| %>
    <tr>
      <td> <%= response.post.title %> </td>
    <td><%= truncate response.post.description, length:15, separator:/\w/, omission: "..."%></td>
    <td><%= response.price_quote %></td>
      </tr>
      <%end %>
</tbody>
</table>
<div class="waves-effect waves-light btn", style="float:right"> <%= button_to "Awaiting Response", vendor_responses_path(@vendor), method: 'get' %> </div>

<br>
<br>
  <table>
  <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price Range</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= truncate post.description, length:15, separator:/\w/, omission: "..." %></td>
        <td>$ <%= post.min_price%> - $ <%= post.max_price%></td>
      </tr>

    <% end %>
  </tbody>
  </table>

  <% more_gigs = !@posts.empty? ? "More Gigs Available" : "No Gigs Available" %>
  <div class="waves-effect waves-light btn" style="float:right"> <%= button_to "#{more_gigs}", posts_path, method: 'get' %> </div>
