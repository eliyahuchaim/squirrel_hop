<div class="container">

<br>

<%= form_for @vendor do |f| %>
<div class="input-field">
<%= f.label :company_name%>
<%= f.text_field :company_name %>
</div>
<div class="input-field">
<%= f.label :phone %>
<%= f.text_field :phone %>
</div>
<div class="input-field">
<%= f.label :email %>
<%= f.text_field :email %>
</div>

<%= f.label :services %>
<br>
<%= f.collection_check_boxes(:services, @services, :id,:name, :include_hidden => false) do |t| %>
<br>
<%= t.check_box(checked: @vendor.services.map(&:id).include?(t.value)) %> <%= t.label %>
<% end %>
<br>
<br>
<div class="waves-effect waves-light btn"><%= f.submit %> <div>
<%= button_to "Cancel", vendor_path(current_vendor), method: 'get', class: "waves-effect waves-light btn" %>
<% end %>

</div>
