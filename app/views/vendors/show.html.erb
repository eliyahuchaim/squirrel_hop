<% if current_vendor == @vendor.id %>
 <h1>Welcome to your main page, <%= @vendor.username %></h1>
<% end%>
<p>Username: <%= @vendor.username %></p>
<br>
<% if current_vendor %>
<%= button_to "Logout", vendors_logout_path, method: 'delete' %>
<% end %>

<% if current_vendor == @vendor.id %>
<h3>Services You Currently Offer</h3>
  <% @services.each do |service| %>
  <li><%= service.name %>
<% end %>
<% end %>
<br>
<br>

<h2>Gigs You Responded To:</h2>
<% @vendor.responses.each do |response| %>
<%=  response.post %>
<%=  response.description %>
<%= button_to "Delete", response_path(response), method:'delete'%>
<% end %>
<br>
<br>

<%= button_to "View Available Gigs", posts_path, method: 'get' %>

<%= button_to "Add/Remove Services or Edit Your Account", edit_vendor_path, method: 'get' %>
