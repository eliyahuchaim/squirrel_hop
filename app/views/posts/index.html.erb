
<div class="row">
<% @posts.each do |post| %>

<div class="col m4">
<div class="card">
  <div class="card-image">
    <img src="https://static.pexels.com/photos/33109/fall-autumn-red-season.jpg">
    <span class="card-title"><%= post.title %></span>
    <!-- <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">+</i></a> -->
  </div>
  <div class="card-content">
    <p><%= post.description%></p>
  </div>
  <div class="card-action">
    <div class="row">
    Price Range: $ <%= post.min_price%> - $ <%= post.max_price%>
    <div class="waves-effect waves-light btn red" style="float:right">
        <%= button_to "Respond", new_response_path, params: {'post_id' => post.id}, method:'get'%>
    </div>
    </div>
  </div>

</div>
</div>

<% end %>
</div>







