<div align="center"><h2>Edit Your Profile:</h2></div><br><br>


<div class="container">

  <%= form_for @user do |f| %>
  <div class="input-field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br>
  </div>

  <div class="input-field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br>
  </div>

  <div class="input-field">
  <%= f.label :street_address %>
  <%= f.text_field :street_address %><br>
  </div>

  <div class="input-field">
  <%= f.label :city %>
  <%= f.text_field :city %><br>
  </div>

  <div class="input-field">
    <%= f.label :state %>
    <%= f.text_field :state %><br>
  </div>

  <div class="input-field">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %><br>
  </div>

  <div class="input-field">
    <%= f.label :phone %>
    <%= f.text_field :phone %><br><br>
  </div>

  <center><div>
    <%= f.submit "Update Profile", class: "waves-effect waves-light btn"%>
    <%= button_to "Cancel", user_path, method: 'get', class: "waves-effect waves-light btn" %>
  </div>

  <% end %>

</div>
