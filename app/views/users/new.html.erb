<h2>Create New User</h2>
<%= form_for @user do |f| %>
<% if !flash[:errors].nil? %>
    <% flash[:errors].each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>
<%= f.label :username %>
<%= f.text_field :username, required: true %><br>
<%= f.label :password %>
<%= f.password_field :password, required: true %><br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, required: true %><br>
<%= f.label :first_name %>
<%= f.text_field :first_name, required: true %><br>
<%= f.label :last_name %>
<%= f.text_field :last_name %><br>
<%= f.label :street_address %>
<%= f.text_field :street_address %><br>
<%= f.label :city %>
<%= f.text_field :city %><br>
<%= f.label :state %>
<%= f.text_field :state %><br>
<%= f.label :zip_code %>
<%= f.text_field :zip_code %><br>
<%= f.label :email %>
<%= f.text_field :email, required: true %><br>
<%= f.label :phone %>
<%= f.text_field :phone, required: true %><br><br>
<%= f.submit "Create Account"%>
<% end %>
