<div class="container">

<div class="row">



<div class="col s3">
  <h2>Profile</h2>
<% if current_user == @user.id %>
    Name: <%= @user.first_name %> <%= @user.last_name %><br>
    Registered email: <%= @user.email %><br>
    Member Since: <%= @user.created_at.month %>/<%= @user.created_at.year %><br><br>
    <%= button_to "Edit Profile", edit_user_path, method: 'get', class: "waves-effect waves-light btn" %><br><br>
<% end%>
</div>

<div class="col s9 push-s2">
  <br>
  <br>
  <br>
  <%= render "user_table" %>
  <br>
  <div style="float:right"> <%= button_to "Create Post", new_post_path, method: 'get', class: "waves-effect waves-light btn" %>   </div>


</div>
</div>
</div>
